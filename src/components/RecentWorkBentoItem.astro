---
  interface Props {
    class?: string
    title: string,
    subtitle?: string,
    image: string,
    directory: string
  }

  const { title, subtitle, directory } = Astro.props
---

<a
  class={`
    ${Astro.props.class}
  `}
  href={`/mis-trabajos/${directory}/${title}`}
>
  <article class={`
    relative h-full rounded-xl
    backdrop-blur-md
    border border-black/10
    shadow-inner shadow-white/10
    overflow-hidden
    group cursor-pointer
  `}>

    <div class="
      absolute z-10 bottom-0 top-0 w-full h-full
      bg-gradient-to-b from-transparent from-40% via-black/20 to-black/80"
    ></div>

    <div
      slot="image"
      class="absolute left-0 top-0 bottom-0 w-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-center -z-10 object-cover"
      style="background-image: url('/Sydney.jpg');"
    />

    <div 
      class="relative select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full"
    >
      <h2 class="text-3xl font-semibold text-balance text-white mb-4">{title}</h2>
      {
        subtitle && (
          <h3 class="text-3xl font-semibold text-sky-200/80 -mt-4 mb-4">{subtitle}</h3>
        )
      }
    
      <slot name="content"></slot>
    </div>
  </article>
</a>
---
import Banner from "@/components/Banner.astro"
import Layout from "../../layouts/Layout.astro"
import { recentWorks } from "@/lib/data"

const { title } = Astro.params

const recentWork = recentWorks.find(recentWork => recentWork.title === title)

---


<Layout title="Alejandro Arroyo - Photo">
	<main class="flex flex-col justify-center">
    <Banner
			class="h-[40vh]"
			title={title}
		/>
		<section id="recentWork" class="w-full xl:w-[1440px] mx-auto py-20 flex flex-col justify-center items-center space-y-10">
			<h3 class="text-xl text-center" set:html={recentWork?.description}>/h3>
		</section>
	</main>
</Layout>